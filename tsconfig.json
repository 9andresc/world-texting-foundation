{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "*": ["src/*"],
      "api/*": ["src/api/*"],
      "db/*": ["src/db/*"],
      "helpers/*": ["src/helpers/*"],
      "scripts/*": ["src/scripts/*"],
      "services/*": ["src/services/*"]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
